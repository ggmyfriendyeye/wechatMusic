.wrap{
  width:100%;
  box-sizing: border-box;
   font-family: "Times New Roman";
}
.header{
  width:100%;
  height:100rpx;
  line-height:100rpx;
  border-bottom:1rpx solid #ddd;
}
.header text{
  color:#333;
  font-size:32rpx;
  font-weight: 400;
  margin-left:20rpx;
}
.tab_bar{
  width:95%;
  margin:20rpx auto;
}
.tab_item{
  width:100%;
  overflow: hidden;
  margin:20rpx 0;
}
.tab_item .left{
  width:60%;
  height:230rpx;
  float:left;
  position:relative;
}
.tab_item .left > image{
  width:100%;
  height:100%;
  border-radius: 8rpx;
  position:absolute;
  top:0;
  left:0;
}
.tab_item .left > i{
  position:absolute;
  right:20rpx;
  bottom:20rpx;
}
.tab_item .left > i > image{
  width:96rpx;
  height:96rpx;
  border-radius: 50%;
}
.tab_item .right{
  width:calc(40% - 20rpx);
  height:230rpx;
  float:right;
  /* text-align:center; */
  line-height:230rpx;
  padding:10rpx;
}

.item_name{
   display:block;
  line-height:50rpx;
  color:#333;
  font-size:32rpx;
  padding:10rpx;
  font-weight: 500;
}
.item_count{
  display:block;
  font-size:28rpx;
  color:#555;
  font-weight: 300;
  line-height:50rpx;
}