.wrap{
  width:100%;
}
.header{
   width:100%;
   overflow: hidden;
}
.search_btn{
  width:90%;
  height:80rpx;
  margin:20rpx auto;
  border-radius: 8rpx;
  position:relative;
}
.search_btn input{
  height:70rpx;
  width:90%;
  padding: 5rpx 10rpx;
  border:none;
  outline: none;
   background:#ddd;
   color:#333;
}
.searchcion{
  position: absolute;
  right:0;
  top:0;
  bottom: 0;
  margin:auto;
  z-index: 2;
  width: 32rpx;
  height: 32rpx;
  text-align: center;

}

.container {
  padding:0;
  margin:0;
}

.container .top {
  width:100%;
  height:120rpx;
  display: flex;
  justify-content: space-around;
  font-size: 32rpx;
  color: #444;
  background:#f2f2f2;
  padding: 15rpx 0;
  box-sizing: border-box;
} 
.tab {
  flex: 1;
  height:100rpx;
  box-sizing: border-box;
  text-align:center;
   padding: 15rpx 0;
}
 
 .seiperTab {
  width: 100%;
  height: calc(100vh - 240rpx);
}
  
 
.scroll {
  width: 100%;
  height: 100%;
}
 
swiper-item {
  padding: 0 23rpx;
  box-sizing: border-box;
}
.active{
  color:red;
  border-bottom: 1rpx solid red;
}
.slid_list{
  width:100%;
  margin:10rpx 0;
  overflow: hidden;
}
.list_left{
  width:50%;
  float:left;
}
.list_right{
  width:50%;
  float:right;
}
.list_left_item,
.list_right_item{
  width:100%;
  height:60rpx;
  line-height:60rpx;
  text-align:left;
}

.music_list{
  width:100%;
  margin-top:20rpx;
}
.music_play_item{
  width:100%;
  overflow: hidden;
  margin:10rpx 0;
  border-bottom:1rpx solid #ddd;
}
.music_btn{
  width:18%;
  height:120rpx;
  float:left;
}

.music_name{
  width:82%;
   height:120rpx;
  float:left;
  text-align:left;
}

.song_name{
  display:block;
  color:#333;
  font-size:28rpx;
  padding:5rpx;
}

.songer_name{
  display:block;
  color:#444;
  font-size:24rpx;
  padding:5rpx;
}
.songer_name text{
  display:inline-block;
  vertical-align: middle;
  margin: 0 5rpx;
}
.songer_name i image{
  width:32rpx;
  height: 32rpx;
  display:inline-block;
  vertical-align: middle;
}
.music_btn{
  font-size:0;
}
.music_btn view{
  width:50%;
  height:100%;
  float:left;
}
.play_out{
  position:relative;
}
.play_out image{
  width:38rpx;
  height:38rpx;
  position:absolute;
  left:0;
  top:0;
  bottom:0;
  right:0;
  margin:auto;
}
.hide{
  display:none;
}
.show{
  display:block;
}

/* 歌手 */
.songer_bar{
  width:100%;
  margin-top:20rpx;
}
.songer_bar_item {
  width:100%;
  overflow: hidden;
  margin:10rpx;
}
.songer_bar_item .songer_img{
  width:18%;
  height:128rpx;
  float:left;
}
.songer_bar_item .songer_img image{
  width:100%;
  height:100%;
}
.songer_bar_item .songer_text{
  width:82%;
  height:128rpx;
  line-height:128rpx;
  color:#333;
  font-size: 28rpx;
  font-weight: 500;
  float:right;
  border-bottom: 1rpx solid #ddd;
}
.songer_bar_item .songer_text text{
  padding:0 10rpx;
}