.detail{
  width:100%;
}
.header{
  width:100%;
  /* background:linear-gradient(#e66465, #9198e5); */
  overflow: hidden;
  position:relative;
}
.header > .image{
  width:100%;
  height:100%;
  position:absolute;
  left:0;
  top:0;
  z-index:-1;
}
.header > .image > image{
 width:100%;
 height:100%;
 filter:blur(20px);
}
.header_content{
  width:95%;
  height:360rpx;
  margin:20rpx auto;
}
.content_top{
  width:100%;
  height:240rpx;
  overflow: hidden;
}
.content_bottom{
  width:100%;
  height:120rpx;
   display:flex;
}
.content_left{
  width:35%;
  height:100%;
  float:left;
  position:relative;
}
.content_right{
  width:65%;
  height: 100%;
  float:left;
}
.content_img{
  width:200rpx;
  height:200rpx;
  position:absolute;
  left:0;
  top:0;
  bottom:0;
  right:0;
  margin:auto;
}
.content_img image{
  width:100%;
  height:100%;
  border-radius: 6rpx;
}
.right_top{
  width:100%;
  padding:10rpx 0;
}
.right_top text{
  font-size:28rpx;
  color:#fff;
  font-weight:600;
}
.right_bottom{
  width:90%;
  margin-top:20rpx;
}
.right_bottom text{
   padding:5rpx;
  color: #ddd;
  font-size: 26rpx;
  /* line-height: 40rpx; */
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.content_btn-bar{
  height:100%;
  flex: 1;
  position:relative;
}
.btn_img{
  width:120rpx;
   height:100%;
  position:absolute;
  left:0;
  top:0;
  bottom:0;
  right:0;
  margin:auto;
}
.image_top{
  width:100%;
  height:80rpx;
  position:relative;
}
 .image_top image{
   width:64rpx;
   height:64rpx;
   position:absolute;
  left:0;
  top:0;
  bottom:0;
  right:0;
  margin:auto;
 }
.btn_text{
  width:100%;
  height:40rpx;
  text-align: center;
  font-size:26rpx;
  color:#fff;
}
.list_title{
  width:100%;
  height:120rpx;
}
.list_title view{
  float:left;
  height:100%;
  line-height:110rpx;
}
.list_bar{
  width:15%;
  height: 100%;
 position: relative;
}
.list_bar image{
  width:64rpx;
  height: 64rpx;
  position:absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  margin:auto;
}
.list_text{
  width:85%;
  color:#333;
  font-size:32rpx;
  border-bottom: 1rpx solid #ddd;
}
.list_text text{
  color:rgba(85, 85, 85, 0.753);
  font-size:26rpx;
}
.list_content{
  width:100%;
}
.list_bar_item{
  width:100%;
  height:120rpx;
}
.list_bar_left{
  width:15%;
  height:120rpx;
  line-height:120rpx;
  text-align: center;
  float:left;
}
.list_bar_right{
  width:85%;
  height:120rpx;
  border-bottom: 1rpx solid #ccc;
  float:left;
}
.list_tite_text{
  width:80%;
  height:100%;
  float:left;
}
.songer_name{
  width:100%;
  padding:10rpx;
  font-size:32rpx;
  font-weight:500;
  color:#333;
}
.songer_msg{
  width:100%;
  padding:10rpx;
  font-size:26rpx;
  color:rgba(87, 82, 82, 0.747);
  
}
.songer_name text,
.songer_msg text{
  display:block;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list_bar_control{
  width:20%;
  height:100%;
  float:right;
  position: relative;
}
.list_bar_control image{
  position:absolute;
  left:0;
  top:0;
  bottom:0;
  right:0;
  margin:auto;
  width:96rpx;
  height: 96rpx;
}