.play{
  width:100%;
  position:absolute;
  left:0;
  top:0;
  bottom:0;
  right:0;
  margin:auto;
}
.header{
  width:100%;
  height:75%;
  position:relative;
}
 .header .music_title{
  width:100%;
  height:100rpx;
  text-align:center;
  line-height:100rpx;
  position:absolute;
  left:0;
  top:0;
  z-index:10;
}
.music_title text{
 color:#fff;
  font-size:38rpx;
  font-weight:600;
}
.play_img{
  width:400rpx;
  height:400rpx;
  position:absolute;
  left:0;
  top:0;
  bottom:0;
  right:0;
   margin:auto;
  border-radius: 50%;
  overflow: hidden;
}
/* 是否执行动画 */
.an{
   animation: mymove 3.5s linear 3s infinite;
}
.play_img image{
  width:100%;
  height:100%;
}
/* 显示隐藏 */
.hide{
 display: none;
}
.show{ 
 display: block;
}
/* 歌词列表 */
.lyaric{
  margin-top:100rpx;
  width:100%;
  height:calc(100% - 100rpx);
  position:absolute;
  left:0;
  bottom:0;
  overflow: hidden;
}
.music_list{
  width:80%;
  height:auto;
  position: absolute;
  left:0;
  top:0;
  right:0;
  margin:auto;
  color:#fdfdfd;
}
.music_list .music_item {
  width:100%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0px 10rpx;
  font-size:28rpx;
  font-weight:400;
  text-align:center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.play_btn{
  width:100%;
  height:100%;
  position:absolute;
  left:0;
  top:0;
  z-index:-1;
  filter: blur(3px);
  background-image: linear-gradient( #190F0D,#625957);
}
.play_btn image{
  width:100%;
  height:100%;
}
/* 动画 */
@keyframes mymove
{
from {
  transform: rotateZ(0deg)
}
to {
  transform: rotateZ(360deg)
}
}
.play_controls{
  width:100%;
  height:300rpx;
  position: fixed;
  bottom:0;
  left:0;
}
.controls_top{
  width:100%;
  height:120rpx;
}
.controls_top .controls_content{
  width:85%;
  height:120rpx;
  margin:0 auto;
  display:flex;
}
.btn_item{
  height:120rpx;
  flex: 1;
  position:relative;
}
.btn_item image{
  width:120rpx;
  height:120rpx;
  position:absolute;
  left:0;
  top:0;
  bottom:0;
  right:0;
  margin:auto;
}
.ping_jia{
  display:block;
  position:absolute;
  left:88rpx;
  top:23rpx;
  width:50rpx;
  height:50rpx;
  color:#fff;
  font-size:26rpx;
}
.controls_middle{
  width:100%;
  height:50rpx;
}
.controls_middle .time{
  width:15%;
  height:50rpx;
  float:left;
  line-height:50rpx;
  text-align: center;
  color:#fff;
  font-size:28rpx;
}
.controls_middle .slid_control{
  width:70%;
  height:50rpx;
  float:left;
}
.progress{
  width:calc(100% - 40rpx);
  height:6rpx;
  margin:22rpx 20rpx;
  background:#fff;
  position:relative;
}
.active-progress{
  width:0%;
  height:100%;
  position:absolute;
  left:0;
  top:0;
  background:yellow;
}
.mask{
  width:40rpx;
  height:40rpx;
  border-radius: 50%;
  background:#fff;
  position:absolute;
  left:-20rpx;
  top:-16rpx;
}
.mask .circle {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color:red;
}
.control_bottom{
  width:100%;
  height:120rpx;
  display:flex;
}
.btn_a{
  height:120rpx;
  flex: 1;
  position:relative;
}
.btn_a image{
  width:96rpx;
  height:96rpx;
  position:absolute;
  left:0;
  top:0;
  right:0;
  bottom:0;
  margin:auto;
}
.active{
  color:red;
}